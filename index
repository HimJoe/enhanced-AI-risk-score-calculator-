    <script>
        function calculateRisk() {
            // Get all values
            var projectName = document.getElementById('projectName').value;
            var useCase = document.getElementById('useCase').value;
            var stakeholder = document.getElementById('stakeholder').value;
            var dataTypes = document.getElementById('dataTypes').value;
            var impact = document.getElementById('impact').value;
            var likelihood = document.getElementById('likelihood').value;
            var amplifier = document.getElementById('amplifier').value;
            var modelSize = document.getElementById('modelSize').value;
            var trainingFreq = document.getElementById('trainingFreq').value;
            var infraType = document.getElementById('infraType').value;
            var usageVolume = document.getElementById('usageVolume').value;
            var dataPrivacy = document.getElementById('dataPrivacy').value;
            var securityLevel = document.getElementById('securityLevel').value;
            var alignment = document.getElementById('alignment').value;
            
            // Simple validation
            if (!projectName || !useCase || !stakeholder || !dataTypes || 
                !impact || !likelihood || !amplifier || !modelSize || !trainingFreq || 
                !infraType || !usageVolume || !dataPrivacy || !securityLevel || !alignment) {
                alert('Please fill in all fields before calculating.');
                return;
            }
            
            // Convert to numbers
            var impactNum = Number(impact);
            var likelihoodNum = Number(likelihood);
            var amplifierNum = Number(amplifier);
            var modelSizeNum = Number(modelSize);
            var trainingFreqNum = Number(trainingFreq);
            var infraTypeNum = Number(infraType);
            var usageVolumeNum = Number(usageVolume);
            var dataPrivacyNum = Number(dataPrivacy);
            var securityLevelNum = Number(securityLevel);
            var alignmentNum = Number(alignment);
            
            // Simple calculation
            var baseRisk = impactNum * likelihoodNum * amplifierNum;
            var carbonScore = (modelSizeNum + trainingFreqNum + usageVolumeNum) / 3;
            var sustainabilityAdjustment = carbonScore * 0.1;
            var securityAdjustment = securityLevelNum * 0.1;
            var privacyAdjustment = dataPrivacyNum * 0.1;
            var alignmentAdjustment = alignmentNum * 0.1;
            
            var finalScore = baseRisk + sustainabilityAdjustment + securityAdjustment + privacyAdjustment + alignmentAdjustment;
            var riskScore = Math.round(finalScore * 10) / 10;
            
            // Determine risk level
            var riskLevel, riskClass, bgColor;
            if (riskScore <= 6) {
                riskLevel = 'GREEN - Low Risk';
                riskClass = 'green';
                bgColor = '#d4edda';
            } else if (riskScore <= 12) {
                riskLevel = 'YELLOW - Medium Risk';
                riskClass = 'yellow';
                bgColor = '#fff3cd';
            } else if (riskScore <= 20) {
                riskLevel = 'RED - High Risk';
                riskClass = 'red';
                bgColor = '#f8d7da';
            } else {
                riskLevel = 'BLACK - Critical Risk';
                riskClass = 'black';
                bgColor = '#343a40';
            }
            
            // Determine carbon impact
            var carbonLevel;
            if (carbonScore <= 2) {
                carbonLevel = "Low Carbon Impact";
            } else if (carbonScore <= 4) {
                carbonLevel = "Moderate Carbon Impact";
            } else {
                carbonLevel = "High Carbon Impact";
            }
            
            // Create recommendations based on risk level
            var operationalRec, governanceRec;
            
            if (riskScore <= 6) {
                operationalRec = '<h4>‚úÖ Standard Deployment Approved</h4><p>This AI system presents minimal risk and can proceed with standard operational controls. Focus on establishing baseline performance metrics, routine maintenance schedules, and standard change management processes.</p><ul><li>Implement basic performance monitoring dashboards</li><li>Conduct quarterly risk and performance reviews</li><li>Maintain standard documentation and audit trails</li><li>Follow routine change management procedures</li></ul>';
                
                governanceRec = '<h4>üõ°Ô∏è Standard Governance Framework</h4><p>Apply standard enterprise governance controls with emphasis on data protection and basic AI ethics monitoring. Standard security protocols should be sufficient for this risk level.</p><ul><li>Implement standard data privacy and protection controls</li><li>Conduct regular security vulnerability assessments</li><li>Deploy basic AI ethics and bias monitoring tools</li><li>Establish standard incident response procedures</li></ul>';
            } else if (riskScore <= 12) {
                operationalRec = '<h4>‚ö†Ô∏è Enhanced Controls Required</h4><p>This system requires enhanced monitoring and staged deployment approach due to moderate risk factors. Implement a phased rollout strategy starting with limited pilot deployment.</p><ul><li>Deploy enhanced real-time monitoring with automated alerts</li><li>Execute staged rollout: pilot ‚Üí limited ‚Üí full deployment</li><li>Conduct monthly performance and bias assessments</li><li>Implement human-in-the-loop validation mechanisms</li></ul>';
                
                governanceRec = '<h4>üîí Enhanced Security & Privacy Controls</h4><p>Elevated governance requirements due to moderate risk profile. Enhanced security measures and privacy controls are essential to mitigate potential adverse outcomes.</p><ul><li>Deploy advanced data encryption and granular access controls</li><li>Conduct regular penetration testing and security audits</li><li>Implement enhanced AI explainability and transparency features</li><li>Complete comprehensive privacy impact assessments</li></ul>';
            } else if (riskScore <= 20) {
                operationalRec = '<h4>üö® Conditional Deployment - Major Controls Required</h4><p>High-risk classification requires extensive additional controls before deployment can be approved. Independent validation and extensive testing are mandatory.</p><ul><li>Complete comprehensive bias testing and fairness assessments</li><li>Obtain independent third-party validation and certification</li><li>Establish robust human oversight and clear decision boundaries</li><li>Implement weekly monitoring with monthly comprehensive assessments</li></ul>';
                
                governanceRec = '<h4>üõë Strict Governance & Security Framework</h4><p>Critical governance controls required due to high-risk classification. Zero-trust security architecture and continuous monitoring are essential.</p><ul><li>Implement zero-trust security architecture</li><li>Deploy continuous privacy and security monitoring systems</li><li>Complete advanced AI safety testing and red-team exercises</li><li>Require multi-party approval for all system modifications</li></ul>';
            } else {
                operationalRec = '<h4>üõë Deployment Blocked - Fundamental Redesign Required</h4><p>Critical risk level detected - deployment is blocked until fundamental risk reduction is achieved. A complete system redesign is required.</p><ul><li>Conduct fundamental redesign of AI system architecture</li><li>Complete extensive multi-phase validation with independent oversight</li><li>Develop comprehensive regulatory approval pathway</li><li>Obtain board-level risk acceptance and oversight</li></ul>';
                
                governanceRec = '<h4>‚õî Complete Governance Overhaul Required</h4><p>Critical governance framework required with maximum security and oversight measures. External audits and regulatory pre-approval are mandatory.</p><ul><li>Complete security architecture redesign with external validation</li><li>Conduct mandatory external security and privacy audits</li><li>Complete advanced AI safety research and comprehensive testing</li><li>Establish mandatory regulatory authority engagement</li></ul>';
            }
            
            var sustainabilityRec = '<h4>üå± Sustainability Assessment: ' + carbonLevel + ' (Score: ' + carbonScore.toFixed(1) + '/5)</h4><p><strong>Carbon Reduction Strategies:</strong> Implement model optimization techniques such as pruning and quantization to reduce computational requirements. Consider transfer learning approaches to minimize training time.</p><ul><li>Optimize model architecture for computational efficiency</li><li>Implement transfer learning to reduce training requirements</li><li>Deploy model pruning and quantization techniques</li><li>Schedule compute tasks during low-carbon energy periods</li></ul>';
            
            // Update the display
            document.getElementById('summaryContent').innerHTML = '<p><strong>Project:</strong> ' + projectName + '</p><p><strong>Stakeholder:</strong> ' + stakeholder + '</p><p><strong>Use Case:</strong> ' + useCase + '</p><p><strong>Data Types:</strong> ' + dataTypes + '</p>';
            
            document.getElementById('calculationSteps').innerHTML = '<div class="calculation-step"><strong>Base Risk:</strong> ' + impactNum + ' √ó ' + likelihoodNum + ' √ó ' + amplifierNum + ' = ' + baseRisk.toFixed(1) + '</div><div class="calculation-step"><strong>Sustainability Adjustment:</strong> +' + sustainabilityAdjustment.toFixed(1) + '</div><div class="calculation-step"><strong>Governance Adjustments:</strong> +' + (securityAdjustment + privacyAdjustment + alignmentAdjustment).toFixed(1) + '</div><div class="calculation-step" style="border-top: 2px solid #dee2e6; padding-top: 10px; margin-top: 15px;"><strong>Final Score:</strong> ' + riskScore + '</div>';
            
            document.getElementById('riskScore').textContent = riskScore;
            document.getElementById('riskLevel').textContent = riskLevel;
            document.getElementById('riskLevel').className = 'risk-level ' + riskClass;
            document.getElementById('operationalRec').innerHTML = operationalRec;
            document.getElementById('operationalRec').style.backgroundColor = bgColor;
            document.getElementById('governanceRec').innerHTML = governanceRec;
            document.getElementById('governanceRec').style.backgroundColor = bgColor;
            document.getElementById('sustainabilityRec').innerHTML = sustainabilityRec;
            
            // Show results
            document.getElementById('results').style.display = 'block';
            document.getElementById('results').scrollIntoView({ behavior: 'smooth' });
        }
    </script>
</body>
